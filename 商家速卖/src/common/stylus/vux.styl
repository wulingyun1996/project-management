    height: 90px!important
    .vux-popup-header-left,.vux-popup-header-right
      font-size: 30px;/*px*/
      text-align: center
      line-height: 90px
    .vux-popup-header-right
      color: $color-orange9 
      padding-right: 26px
    .vux-popup-header-left
      padding-left: 26px
      color: $color-0
  .scroller-indicator
    height: 90px;/*px*/
